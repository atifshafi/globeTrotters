<%- include("../partial/header") %>
<div class="row">
	<h1 style="text-align: center">Edit profile details</h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/users/<%= user._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="description[text]" value="<%= user.description %>">
			</div>
			<div class="form-group">
				<button id="btn-auth" class="btn ../btn-lg btn-primary btn-block">Submit!</button>
			</div>
		</form>
	</div>
</div>
