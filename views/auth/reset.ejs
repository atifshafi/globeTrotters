<%- include("../partial/header") %>

<div class="row">
    <h1 style="text-align: center">Reset Password</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/reset/<%= token %>" method="POST">
            <div class="form-group">
				<label for="password">New Password</label>
                <input class="form-control" type="password" name="password" placeholder="New Password" autofocus>
            </div>
			<div class="form-group">
				<label for="password">Confirm Password</label>
                <input class="form-control" type="password" name="confirm" placeholder="Confirm password" autofocus>
            </div>
            <div class="form-group">
                <button id="btn-auth" type="sumit" class="btn btn-primary">Update Password</button>
            </div>
        </form>
    </div>
</div>

