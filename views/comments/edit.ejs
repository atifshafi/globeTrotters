<%- include("../partial/header") %>
<div class="row">
	<h1 style="text-align: center">Edit comment</h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/campgrounds/<%= campground %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
			</div>
			<div class="form-group">
				<button id="btn-auth" class="btn ../btn-lg btn-primary btn-block">Submit!</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
</div>
<%- include("../partial/footer") %>