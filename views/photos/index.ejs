<%- include("../partial/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to GlobeTrotters!</h1>
			<p>Explore what our trotters are up to ...</p>
			<p>
				<a id="btn-add-photo" class="btn"href="/photos/new">Add New Photo</a>
			</p>
		</div>
	</header>

	<div class="row">
		<div class="col-lg-12">
			<h3>Our Most Popular Photos</h3>
		</div>
	</div>

	<div class="row">
		<% for(i=0; i<photos.length ; i++){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= photos[i].image %>">
					<div class="caption text-center">
						<h4><%= photos[i].name %></h4>
						<div>
           					<span class="badge label-primary"><i class="fas fa-thumbs-up"></i> <%= photos[i].likes.length %></span>
       					</div>
					</div>
					<p class="text-center">
						<a href="/photos/<%= photos[i]._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }; %>
	</div>
</div>


<%- include("../partial/footer") %>